<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FriendProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/profile"
        />
    <TextView
        android:id="@+id/friend_profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@id/friend_profile_image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/friend_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hey there I'm using whatsapp"
        android:layout_below="@id/friend_profile_username"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/friend_profile_button"
        android:layout_width="match_parent"
        android:layout_below="@id/friend_profile_status"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Send Chat"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        />

    <Button
        android:id="@+id/friend_profile_button_cancel"
        android:layout_width="match_parent"
        android:layout_below="@id/friend_profile_button"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:text="Cancel Chat"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:textColor="@android:color/background_light"
        />
</RelativeLayout>